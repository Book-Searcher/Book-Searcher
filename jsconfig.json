{
  "compilerOptions": {
    "baseUrl": "/",
    "paths": {
      "components/*": ["src/components/*"],
      "static/*": ["static/*"],
      "db/*": ["src/db/*"],
      "models/*": ["src/models/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src/**/*.js",
    "src/**/*.svelte",
    "static/*",
    "static/node_modules/mongoose"
  ]
}
